@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model IEnumerable<PeopleSearchDemo.ViewModel.PeopleViewModel>

<div class="ui-widget">
    <br /><br /><br /><br />
    <div style="min-height:330px;padding-left:0%" class=" ui-tabs ui-widget ui-widget-content ui-corner-all">
        @foreach (var people in Model)
            {
            <div class="container detail-div-top-buffer">
                <div class="row col-sm-12 person-row-div">
                    <div class="col-sm-3">
                        <div class=" item-image ">
                            <img src="@people.Image" class="img-responsive">
                        </div>
                    </div>
                    <div class="col-sm-9 person-info">
                        <div class=" row">
                            <label class="col-sm-3 col-form-label">First name</label>
                            <div class="col-sm-9">
                                <p class="">@people.FirstName</p>
                            </div>
                        </div>
                        <div class=" row">
                            <label class="col-sm-3 col-form-label">Last name</label>
                            <div class="col-sm-9">
                                <p class="">@people.LastName</p>
                            </div>
                        </div>
                        <div class=" row">
                            <label class="col-sm-3 col-form-label">Age (yrs.)</label>
                            <div class="col-sm-9">
                                <p class="c">@people.Age</p>
                            </div>
                        </div>
                        <div class=" row">
                            <label class="col-sm-3 col-form-label">Address</label>
                            <div class="col-sm-9">
                                <p class="">@people.Address</p>
                            </div>
                        </div>
                        <div class=" row">
                            <label class="col-sm-3 col-form-label">Hobbies</label>
                            <div class="col-sm-9">
                                <p class="">@people.Interests</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>
@Styles.Render("~/Custom/css")